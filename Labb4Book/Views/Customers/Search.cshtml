@model Labb4Book.Models.Customer
@{
    ViewData["Title"] = "Search";
}
<h1 class="display-5">Show all rented books from specific customer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Search">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Choose customer</label>
                <select class="form-control" name="customerId" asp-items="ViewBag.FkCustomerId"></select>
                <span asp-validation-for="CutsomerFirstName" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Search" class="btn btn-outline-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Go back</a>
            </div>
        </form>
    </div>
</div>